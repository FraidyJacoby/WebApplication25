@model  List<Category>

    <div class="container" style="margin-top:40px;">
               <form action="/home/addcategoryform">
                <button class="btn btn-success">Add Category</button></form>
        <table class="table table-striped table-bordered">
            <tr>
                <th>CategoryName</th>
                <th>Edit Category</th>
            </tr>
            @foreach (Category category in Model)
            {
                <tr>
                    <td><a href="/home/itemsforcategory?categoryId=@category.CategoryId">@category.CategoryName</a></td>
                    <td><form action="/home/editcategoryform">
                        <button class="btn btn-warning">Edit</button>
                        <input type="hidden" name="id" value="@category.CategoryId"/>
                        </form></td>
                </tr>
            }
        </table>
    </div>